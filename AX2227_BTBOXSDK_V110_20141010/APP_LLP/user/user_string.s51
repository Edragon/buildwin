    name STRING
stringdef macro string_name, text
    public string_name
    function string_name, 0
string_name:
    db      text
    endm

llp_define macro llp_name, zh_name, en_name, zh_str, en_str
    public llp_name
    function llp_name, 0
llp_name:
    db      (zh_name)
    db      ((zh_name) >> 8)
    db      (en_name)
    db      ((en_name) >> 8)
//    db      (zh_name-llp_name)
//    db      ((zh_name-llp_name) >> 8)
//    db      (en_name-llp_name-2)
//    db      ((en_name-llp_name-2) >> 8)

    public zh_name
    function zh_name, 0
zh_name:
    db      zh_str

    public en_name
    function en_name, 0
en_name:
    db      en_str
    endm

